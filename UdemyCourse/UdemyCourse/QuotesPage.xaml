<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Padding="20"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdemyCourse.QuotesPage">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20,40,20,20"
                    Android="20,30,20,20">
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout>
        <!--without data binding-->
        <!--<Label Text="Hello World" x:Name="label"></Label>-->
        <!--<Slider ValueChanged="Slider_ValueChanged" x:Name="slider"></Slider>-->

        <Button Text="Next" Clicked="Button_Clicked"></Button>

        <Label  
            Text="{
                Binding 
                Source={x:Reference slider},
                Path=Value, 
                StringFormat='Font size {0:N0}'}"
        >
        </Label>
        <Slider	x:Name="slider" Maximum="50" Minimum="16"/>
        <Label x:Name="currentQuote" FontSize="{Binding Source={x:Reference slider},Path=Value}"></Label>
    </StackLayout>
</ContentPage>